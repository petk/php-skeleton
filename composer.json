{
    "name": "petk/php-skeleton",
    "description": "Skeleton for PHP libraries, packages and components",
    "type": "project",
    "keywords": [
        "skeleton"
    ],
    "homepage": "https://github.com/petk/php-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Kokot",
            "email": "peterkokot@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Petk\\Skeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Petk\\Skeleton\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-update-cmd": "Petk\\Installer::postUpdate",
        "post-package-install": [
            "Petk\\Installer::postPackageInstall"
        ],
        "post-install-cmd": [
            "Petk\\Installer::warmCache",
            "phpunit"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "bin": "bin/installer.php"
}
